{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": ["airbnb", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "warn",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "node/no-unpublished-require": "off",
        "global-require": "off",
        "no-useless-escape": "off",
        "no-param-reassign" : "off"
    },
    "ignorePatterns": ["dist/*"]
}
